<div> 
{{#with movie}}
    <p> 
        <h2>{{title}}</h2>
        <h3> Director: {{director}}</h3>
        <h4>Stars</h4>  
        <ul>
         {{#each stars}}
            <li>{{this}}</li>
        {{/each}}
        </ul>
        <p> {{description}}</p>
        {{#each showtimes}}
            {{this}} | 
        {{/each}}
    </p>
    <div>
        <img  src={{image}}>
    </div>
{{/with}}
</div>